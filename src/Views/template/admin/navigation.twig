<style>
    .nav-sidebar .nav-item.extension>.nav-link {
        display: flex;
        align-items: center;
    }

    .nav-sidebar .nav-item.extension>.nav-link>p {
        flex-grow: 4;
    }

    .nav-sidebar .nav-item.extension>.nav-link>.fa-check {
        color: #b7f958;
    }
</style>
<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
  <ul class="navbar-nav">
      <li class="nav-item">
          <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
          <a href="{{ '/admin/' | base_url }}" class="nav-link">Home</a>
      </li>
  </ul>
</nav>

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="{{ '/admin/' | base_url }}" class="brand-link">
        <span class="brand-text font-weight-light">{{ get_site_title() }}</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" role="menu">
                <li class="nav-item">
                    <a href="{{ '/admin/' | base_url }}" class="nav-link">
                        <i class="nav-icon fas fa-home"></i>
                        <p> Dashboard </p>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="" class="nav-link">
                        <i class="nav-icon fas fa-paint-roller"></i>
                        <p> Appearance </p>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="" class="nav-link">
                        <i class="nav-icon fas fa-pen"></i>
                        <p> Details </p>
                    </a>
                </li>
                <li class="nav-header">Extensions</li>
                {% for extension in get_extensions('features') %}
                    <li class="nav-item extension">
                        {% if check_extension_enabled(extension.name) %}
                            <a href="{{ extension.extra.navigation.admin | base_url }}" class="nav-link">
                                <i class="nav-icon {{ extension.extra['salad-extension'].icon}}"></i>
                                <p> {{ extension.extra['salad-extension'].title}} </p>
                            </a>
                        {% endif %}
                    </li>
                {% endfor %}

                <li class="nav-item">
                    <a href="{{ '/admin/extension/' | base_url }}" class="nav-link">
                        <i class="nav-icon fas fa-cog"></i>
                        <p> Manage Extensions </p>
                    </a>
                </li>
                <li class="nav-header">Account</li>
                <li class="nav-item">
                    <a href="{{ '/admin/change-password' | base_url }}" class="nav-link">
                        <i class="nav-icon fas fa-lock"></i>
                        <p> Change Password </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ '/admin/logout' | base_url }}" class="nav-link">
                        <i class="nav-icon fas fa-arrow-left"></i>
                        <p> Logout </p>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <!-- /.sidebar -->
</aside>