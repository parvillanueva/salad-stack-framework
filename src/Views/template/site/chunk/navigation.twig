<nav class="nav">
  <input type="checkbox" id="nav-check">
  <div class="nav-header">
    <a href="{{ '/' | base_url  }}" class="nav-title">{{ get_site_title() }}</a>
  </div>
  <div class="nav-btn">
    <label for="nav-check">
      <span></span>
      <span></span>
      <span></span>
    </label>
  </div>
  <ul class="nav-list">
    {% for item in get_site_menu() %}
      {% if item.submenu | length > 0%}
        <li class="dropdown">
          <a href="#" class="dropbtn">{{ item.menu }}</a>
          <ul class="dropdown-content">
            {% for sub in item.submenu %}
              {% set url = '/p/' ~ sub.menu_url %}
              <li><a href="{{ url | base_url }}">{{ sub.menu }}</a></li>
            {% endfor %}
          </ul>
        </li>
      {% else %}
        {% set url = '/p/' ~ item.menu_url %}
        <li><a href="{{ url | base_url }}">{{item.menu}}</a></li>

      {% endif %}
      
    {% endfor %}
  </ul>
  
</nav>
<div class="container">